<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Study guide!{% endblock %}</title>
        <!-- icons -->
        <link rel="apple-touch-icon" href="{{  asset('assets/img/apple-touch-icon.png') }}">

        <!-- Bootstrap Core CSS file -->
        <link rel="stylesheet" href="{{  asset('assets/css/bootstrap.min.css') }} ">

        <!-- Override CSS file - add your own CSS rules -->
        <link rel="stylesheet" href="{{  asset('assets/css/styles.css') }}">

        <!-- Conditional comment containing JS files for IE6 - 8 -->
        <!--[if lt IE 9]>
        <script src="{{  asset('assets/js/html5.js') }} "></script>
        <script src="{{ asset('assets/js/respond.min.js')  }}"></script>
        <![endif]-->
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />


        <!-- JQuery scripts -->
        <script src="{{  asset('assets/js/jquery-2.1.4.min.js') }}"></script>
        <style>
            html, body {
            @extend .font-smoothing;
                font: 400 12pt/1em 'Helvetica Neue', 'HelveticaNeue', 'Helvetica', 'Source Sans Pro', 'Arial', Sans-serif;;
                color: #2b2d2e;
                background: #f7f7f7;
                min-width: 320px !important;
                height: 100%;
            }

            .font-smoothing {
                -webkit-font-smoothing: antialiased;
                -moz-osx-font-smoothing: grayscale;
            }

            .disable-selection {
                -webkit-touch-callout: none;
                -webkit-user-select: none;
                -khtml-user-select: none;
                -moz-user-select: none;
                -ms-user-select: none;
                user-select: none;
            }

            #wrapper {
                min-height: 100%;
                position: relative;
            }

            #content-wrapper {
                padding-bottom: 60px;
            }

            input:focus,
            select:focus,
            textarea:focus,
            button:focus {
                outline: none !important;
            }

            input:-webkit-autofill {
                -webkit-box-shadow: 0 0 0px 1000px #ebeded inset;
                background-color: #ebeded !important;
                color: #ebeded !important;
            }
        </style>
        <script>
            WebFontConfig = {
                google: {
                    families: [
                        'Source Serif Pro:400,700:latin-ext',
                        'Source Sans Pro:200,400,600,700:latin-ext',
                    ]
                },
                timeout: 3000,
            };
            (function(d) {
                var wf = d.createElement('script'), s = d.scripts[0];
                wf.src = 'https://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
                s.parentNode.insertBefore(wf, s);
            })(document);
        </script>
    </head>
    <body>
    <div id="wrapper">
        <div id="content-wrapper">
            <header id="site-head">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-4">
                            <div class="side-left">
                                <a href="{{ path('article_add') }}" >Dodaj artyku≈Ç</a>
                            </div>
                        </div>
                        <div class="col-xs-4 text-center">
                            <div class="side-center">
                                <a href="{{ url('article_homepage') }}">
                                    <img class="logo" width="94" height="45" src="{{ asset('assets/img/logo.svg') }}">
                                </a>
                            </div>
                        </div>
                        <div class="col-xs-4 text-right">
                            <div class="side-right">
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            {% block site_content %}{% endblock %}
        </div>
        <footer id="site-footer">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-8">
                        <div class="side-left">
                            Copyright &copy; 2015 <a target="_blank" href="https://github.com/csebastian2/study/blob/master/AUTHORS">Study-Guide Project Authors and Contributors</a>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <div class="side-right">
                            <ul>
                                <li><a target="_blank" href="https://github.com/pkuznik/study-guide/">GitHub</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
        <!-- / .container-fluid -->

    <!-- Bootstrap Core scripts -->
    <script src="{{  asset('assets/js/bootstrap.min.js') }}"></script>
    </body>
</html>
