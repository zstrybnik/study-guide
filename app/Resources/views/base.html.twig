<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Study!{% endblock %}</title>
        <!-- icons -->
        <link rel="apple-touch-icon" href="{{  asset('assets/img/apple-touch-icon.png') }}">

        <!-- Bootstrap Core CSS file -->
        <link rel="stylesheet" href="{{  asset('assets/css/bootstrap.min.css') }} ">

        <!-- Override CSS file - add your own CSS rules -->
        <link rel="stylesheet" href="{{  asset('assets/css/styles.css') }}">

        <!-- Conditional comment containing JS files for IE6 - 8 -->
        <!--[if lt IE 9]>
        <script src="{{  asset('assets/js/html5.js') }} "></script>
        <script src="{{ asset('assets/js/respond.min.js')  }}"></script>
        <![endif]-->
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />


        <!-- JQuery scripts -->
        <script src="{{  asset('assets/js/jquery-2.1.4.min.js') }}"></script>
        <style>
            .container-fluid  div.col-sm-8.col-sm-push-4{
                float: none;
                left: auto;
                margin: 0 auto;
            }
            .study-bg{
                background-color: #363739 !important;
            }
            ul.study-cl li a{
                color: #11b56c !important;
            }
            ul.study-cl li a:hover{
                color: #11b56c !important;
            }
            
            .study-hd{
                color: #f7f7f7 !important;
            }
        </style>
    </head>
    <body>
    <nav class="study-bg navbar navbar-fixed-top navbar-inverse" role="navigation">
        <div class="container-fluid">

            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand study-hd" href="#">Study</a>
            </div>
            <!-- /.navbar-header -->

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav study-cl">
                    <li><a href="{{ path('article_homepage') }}">Start</a></li>
                    <li><a href="{{ path('article_list') }}">Wszystkie artykuły</a></li>
                    <li><a href="{{ path('article_my') }}">Moje artykuły</a></li>
                    <li><a href="{{ path('article_add') }}">Dodaj artykuł</a></li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
    <!-- /.navbar -->

    <!-- Page Content -->
    <div class="container-fluid">
        {% block body %}{% endblock %}
        <!-- /.row -->

        <hr>
        <footer class="margin-tb-3">
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Study 2015</p>
                </div>
            </div>
        </footer>
    </div>
    <!-- /.container-fluid -->

    <!-- Bootstrap Core scripts -->
    <script src="{{  asset('assets/js/bootstrap.min.js') }}"></script>
    </body>
</html>
