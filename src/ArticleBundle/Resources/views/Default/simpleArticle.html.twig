{%  extends '@Article/header.html.twig' %}
{% block title %}{{ article.getTitle() }}{% endblock %}
{% block site_content %}
    <div id="site-content" class="page page-padding page-core-article">
        <div class="container">
                <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                    <article class="fullwidth">
                        <h2 class="page-title">{{ article.getTitle() }}</h2>
                        {{ article.getContent()|raw }}
                    </article>
                    {% set tags =  article.getTags|split(';')%}
                    {% for tag in tags %}
                    <span class="label label-success">{{ tag }}</span>
                    {% endfor %}
                </div>
        </div>
    </div>
{% endblock %}
